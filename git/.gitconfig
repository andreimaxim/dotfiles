[core]
	symlinks = false
	excludesfile = /home/andrei/.gitignore

[init]
 	defaultBranch = main

[pull]
	rebase = true

[filter "lfs"]
 	clean = git-lfs clean -- %f
 	smudge = git-lfs smudge -- %f
 	process = git-lfs filter-process
 	required = true

[user]
	name = Andrei Maxim
	email = andrei@andreimaxim.ro
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIBLsCFcEHXqWkgD65hJ9y4gARfqWT0FYyVOLhgUxl45c

[gpg]
	format = ssh

[gpg "ssh"]
	program = /opt/1Password/op-ssh-sign

[commit]
	gpgsign = true

[include]
    path = ~/.config/delta/delta.gitconfig
